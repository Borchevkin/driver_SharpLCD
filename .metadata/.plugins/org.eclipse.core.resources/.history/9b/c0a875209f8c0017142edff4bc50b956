#include <stdbool.h>
#include <stdint.h>
#include "em_device.h"
#include "em_chip.h"
#include "em_gpio.h"
#include "em_cmu.h"
#include "em_usart.h"
#include "InitDevice.h"
#include "sharpLCD.h"
#include "bsp.h"
#include "font.h"

sharplcd_t sharplcd;

/* =============TEST FIELD============= */

void SHARPLCD_Bitmap(const unsigned char* bitmap, int width, int height, char line, char options);
void SHARPLCD_WriteBuffer(char line);
char m_buffer[SHARPLCD_XRES/8];

/* ==================================== */

/* =====Counts 1ms timeTicks===== */
volatile uint32_t msTicks = 0;

/* =====Interrupt Handlers Section===== */
void SysTick_Handler(void)
{
	msTicks++;
}

/* =====================Main Section===================== */
int main(void)
{
	// Chip errata
	CHIP_Init();
	enter_DefaultMode_from_RESET();

	SysTick_Config(CMU_ClockFreqGet(cmuClock_CORE) / 1000);

	// Init Display
	sharplcd.Write = SPI1_SendPacket;
	sharplcd.SetCS = DISPLAY_SetCS;
	sharplcd.ClearCS = DISPLAY_ClearCS;
	sharplcd.SetVCOM = DISPLAY_SetVCOM;
	sharplcd.ClearVCOM = DISPLAY_ClearVCOM;
	//sharplcd.GetVCOM = DISPLAY_GetVCOM;
	sharplcd.SetDISP = DISPLAY_SetDISP;
	sharplcd.ClearDISP = DISPLAY_ClearDISP;
	sharplcd.SetLSBFirst = SPI1_SetLSBFirst;
	sharplcd.SetMSBFirst = SPI1_SetMSBFirst;
	sharplcd.DelayMs = Delay;
	SHARPLCD_Init(&sharplcd);

	//Set Display ON
	DISPLAY_SetDISP();

	while (1)
	{
		//Straight line
		uint8_t line_1[12] = {0x00,0x00,0x00,0x00,0x00,0x00,0x00,0x00,0x00,0x00,0x00,0x00};

		//LEDs
		GPIO_PinOutToggle(LED0_PORT, LED0_PIN);
		GPIO_PinOutToggle(LED1_PORT, LED1_PIN);

		// ========== Test Field
		SHARPLCD_WriteLine(&sharplcd, 2, line_1);
		Delay(500);
		SHARPLCD_WriteLine(&sharplcd, 4, line_1);
		Delay(500);
		SHARPLCD_WriteLine(&sharplcd, 6, line_1);
		Delay(500);
		SHARPLCD_Clear(&sharplcd);
		Delay(500);
		SHARPLCD_Bitmap(pixel_ti_logo, 96, 96, 0);
		Delay(1000);
		SHARPLCD_Clear(&sharplcd);
		Delay(500);
	}
}
/* ============================================================ */




/* =============TEST FIELD============= */

void SHARPLCD_Bitmap(const unsigned char* bitmap, int width, int height, char line, char options)
{
	sharplcd->SetMSBFirst();		// bit order MSB first

    if (!bitmap) return;

    unsigned char b;
    int i = 0;
    int p = 0;
    int x = width/8;

    while (height > 0 && line < SHARPLCD_YRES) {
        while (i < SHARPLCD_XRES/8 && i < x) {
            b = bitmap[p+i];
            if (!(options & 1)) {         // invert bits if DISP_INVERT is _NOT_ selected
                b = ~b;// pixels are LOW active
            }
            m_buffer[i] = b;
            i++;
        }
        writeBuffer(line);
        p += x;
        i = 0;
        height--;
        line++;
    }
}


void SHARPLCD_WriteBuffer(char line)
{
	uint8_t buffer[1];

    if (line > SHARPLCD_YRES) return;         // ignore writing to invalid lines

    sharplcd->SetCS();

	buffer[0] = SHARPLCD_WRITE_CMD | sharplcd->currentVcom;
	SHARPLCD_ToggleVCOM(sharplcd);
	sharplcd->Write(buffer, 1);

	sharplcd->SetLSBFirst();

	buffer[0] = line + 1;
	sharplcd->Write(buffer, 1);

    char j = 0;
    while (j < (SHARPLCD_XRES/8)) {           // write pixels / 8 bytes
    	sharplcd->Write(m_buffer[j++]);
    }

	buffer[0] = SHARPLCD_NULL_BYTE;
	sharplcd->Write(buffer, 1);
	sharplcd->Write(buffer, 1);

	sharplcd->ClearCS();

	sharplcd->SetMSBFirst();
}

/* ==================================== */

